<section>
  <div>
    <h2>Create Post</h2>

    <form>
      <div>
        <label for="post-title">Title</label>
        <input type="text" id="post-title" name="post-title" />
      </div>
      <div>
        <label for="post-text">Enter Post</label>
        <input id="post-text" name="post-text" />
      </div>
      <button type="submit" class="btn">Create Post</button>
    </form>
  </div>
  <div>
    <h2>My Profile</h2>
    {{> user-info}}
  </div>

</section>

{{#if posts.length}}
<section>
  <h2>My Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<!--Script to add a post-->
<script src="/javascript/add-post.js"></script>
